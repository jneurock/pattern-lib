<div>
  <a {{action "toggleContent"}}>
    {{#unless App.hideContent}}
      Hide code example
      <span class="icon arrow-up2"></span>
    {{else}}
      Show code example
      <span class="icon arrow-down2"></span>
    {{/unless}}
  </a>
</div>

{{#unless App.hideContent}}
  <section class="row">
    <div class="columns">
      {{{content}}}
    </div>
  </section>
{{/unless}}